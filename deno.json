{
  "imports": {
    "mongodb": "npm:mongodb",
    "hono": "npm:hono",
    "zod": "npm:zod@^3.25.36",
    "@hono/zod-validator": "npm:@hono/zod-validator",
    "@std/dotenv": "jsr:@std/dotenv"
  },
  "tasks": {
    "mongo-rs-init": "mongosh realtime --eval \"if (rs.status().ok === 0) { rs.initiate(); } else { print('Replica set already initialized.'); }\"",
    "dev": {
      "command": "deno run -A --watch main.ts",
      "dependencies": [
        "mongo-rs-init"
      ]
    }
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx"
  }
}
