{
  "imports": {
    "mongodb": "npm:mongodb",
    "hono": "npm:hono",
    "valibot": "npm:valibot",
    "@hono/valibot-validator": "npm:@hono/valibot-validator",
    "@scalar/hono-api-reference": "npm:@scalar/hono-api-reference"
  },
  "tasks": {
    "mongo-rs-initiate": "mongosh realtime --eval \"if (rs.status().ok === 0) { rs.initiate(); } else { print('Replica set already initialized.'); }\"",
    "dev": {
      "command": "deno run -A --watch main.ts",
      "dependencies": [
        "mongo-rs-initiate"
      ]
    }
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx"
  }
}
